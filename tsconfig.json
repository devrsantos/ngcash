{
    "compilerOptions": {
        "target": "es2021",
        "lib": ["ES6"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "strict": false,
        "rootDir": "./src",
        "outDir": "./build",
        "moduleResolution": "node",
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "resolveJsonModule": true,
        "allowJs": true,
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@config/*": ["./src/config/*"],
            "@routes/*": ["./src/routes/*"]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["src/**/*"]
}